%nav.navbar.navbar-inverse.navbar-static-top
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => "#navbarMenu", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{ href: root_url } Coderails
    #navbarMenu.collapse.navbar-collapse
      - if user_signed_in?
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle.no-padding{href: '#', 'data-toggle' => 'dropdown', 'role'=> 'button', 'aria-haspopup'=>'true'}
              %img.img-circle{alt: 'img',height: 30, width: 30, src: image_path('user.png')}
            %ul.dropdown-menu
              %li
                = link_to 'javascript:void(0);' do
                  %strong= current_user.email
                = link_to 'Edit profile', edit_user_registration_path
                = link_to 'Logout', destroy_user_session_path, method: :delete
      - else
        %p.navbar-text.navbar-right
          = link_to 'Sign up', new_user_registration_path, class: 'navbar-link'
          |
          = link_to 'Login', new_user_session_path, class: 'navbar-link'
